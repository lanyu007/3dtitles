<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Declare OpenGL ES 3.0 requirement -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" /> <!-- WorldWind需要的网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 读取assets中的离线地图数据 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".loadkml.LoadKMLActivity"
            android:exported="false" />
        <activity
            android:name=".shpload.LoadShpActivity"
            android:exported="false" />
        <activity
            android:name=".kmzload.LoadKMZActivity"
            android:exported="false" />
        <activity
            android:name=".worldwindnav.WorldWindNavActivity"
            android:exported="false" />
        <activity
            android:name=".threedimentionmap.WorldWindOfflineMapActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".exampledemo.worldwindx.GeneralGlobeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_general_globe"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.BasicPerformanceBenchmarkActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_basic_performance_benchmark"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.BasicStressTestActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_basic_stress_test"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.DayNightCycleActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_day_night_cycle"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.OmnidirectionalSightlineActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_movable_line_of_sight"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.MultiGlobeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_multi_globe"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.PathsExampleActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_paths_example"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.PathsPolygonsLabelsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_paths_and_polygons"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.PlacemarksDemoActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_placemarks_demo"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.PlacemarksMilStd2525Activity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_placemarks_milstd2525"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.PlacemarksMilStd2525DemoActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_placemarks_milstd2525_demo"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.PlacemarksMilStd2525StressActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_placemarks_milstd2525_stress_test"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.PlacemarksSelectDragActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_placemarks_select_drag"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.PlacemarksStressTestActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_placemarks_stress_test"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exampledemo.worldwindx.TextureStressTestActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_texture_stress_test"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>